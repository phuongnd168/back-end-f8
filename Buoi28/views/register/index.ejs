<!DOCTYPE html>
<html>
  <head>
    <title>Đăng ký</title>

    <link rel="stylesheet" href="/stylesheets/style.css" />
    <style>
      .content {
        width: 50%;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
      }
      .content button {
        width: 100%;
      }
    </style>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="content">
      <h1>Đăng Ký</h1>
      <% if(msg?.length){ %>
        <div class="alert alert-danger"><%= msg %></div>
      <%}%>
      <% if(msgOk?.length){ %>
        <div class="alert alert-success"><%= msgOk %></div>
      <%}%>
      <form class="row g-3 needs-validation" novalidate method="post">
        <div class="col-md-12">
          <label for="validationCustom01" class="form-label">Tên</label>
          <input
            type="text"
            class="form-control"
            id="validationCustom03"
            name="name"
            <% if(name?.length){ %>
              value=<%= name %>
            <%}%>
            placeholder="Name..."
            required
         
          />
          <span class="text-danger"><%= validate.getError(errors, "name") %></span>
        </div>
        <div class="col-md-12">
          <label for="validationCustom01" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="validationCustom03"
            name="email"
            <% if(email?.length){ %>
              value=<%= email %>
            <%}%>
            placeholder="Email..."
            required
         
          />
          <span class="text-danger"><%= validate.getError(errors, "email") %></span>
        </div>

    
        <div class="col-md-12">
          <label for="validationCustom02" class="form-label">Mật khẩu</label>
          <input
            type="password"
            class="form-control"
            id="validationCustom03"
            name="password"
            <% if(password?.length){ %>
              value=<%= password %>
            <%}%>
            placeholder="Password..."
            required
         
          />
          <span class="text-danger"><%= validate.getError(errors, "password") %></span>
    
        </div>
        <div class="col-md-12">
          <label for="validationCustom02" class="form-label">Nhập lại mật khẩu</label>
          <input
            type="password"
            class="form-control"
            id="validationCustom03"
            name="password2"
            <% if(password2?.length){ %>
              value=<%= password2 %>
            <%}%>
            placeholder="Repassword..."
            required
         
          />

          <% if(err?.length){ %>
            <span class="text-danger"><%= err %></span>
          <%}%>
          <span class="text-danger"><%= validate.getError(errors, "password2") %></span>
        </div>
        <div class="col-12 mt-2">
            <a href="/register"><button class="btn btn-primary" type="submit">Đăng ký</button></a>
        </div>
      
      </form>
    
    </div>
  </body>
</html>
